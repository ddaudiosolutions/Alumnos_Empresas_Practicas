      .form-group.col-md-2
        label(for='curso') Curso
        |         
        select#curso(onchange='seleccionCurso(this)').form-control
            each curso in cursos
              option(value=curso.value selected=curso.select) #{curso}
                

                script.
                 var cursoSeleccionado;
                 function seleccionCurso(seleccion)
                  {
                      cursoSeleccionado = seleccion.value;
                      return cursoSeleccionado
                  }  
                  console.log(`${cursoSeleccionado}`)
                  



    
      .form-group.col-md-2
          - var name = 'CFGMVDJ' 
            case (`${curso}`)
                when "CFGSS"
                  label(for='practicas') practicasSonido         
                  select#practicas.form-control
                      each practica in practicasGradoMedio
                        option= practica

                when "CFGMVDJ"
                  label(for='practicas') Prácticas         
                  select#practicas.form-control
                      each practica in practicasGradoMedio
                        option= practica        

                default 
                  label(for='practicas') Prácticas         
                  select#practicas.form-control
                      each practica in tiposPracticas
                        option= practica   
     
