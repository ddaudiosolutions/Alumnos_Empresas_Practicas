    .body
      table.table
        thead.thead-light
          tr           
            th(scope="col") Empresa                          
            th(scope="col") Contacto                          
            th(scope="col") E-MAIL                         
            th(scope="col") TELEFONO                           
            th(scope="col") PRACTICAS    
            th(scope="col") OBSERVACIONES                      
            
            
             
          
          each empresa in detallesEmpresa
                tr
                    td= empresa.EMPRESA                  
                    td= empresa.CONTACTO                  
                    td= empresa.EMAIL 
                    td= empresa.TELEFONO
                    td= empresa.PRACTICAS
                    
      each empresa in detallesEmpresa    
          tr
            td(scope="col") OBSERVACIONES 
              textarea(class="form-control textarea-autosize mb-4",  value=empresa.OBSERVACIONES)= empresa.OBSERVACIONES     

      div(class="d-flex justify-content-center mb-4")
        button.btn.btn-success(type='button', onclick="window.location='/'") Volver al Menu        
                       
        
